								<a class="waves-effect waves-light btn">Probation</a>
								<a class="waves-effect waves-light btn">Dismissed</a>
						</div>
					</form>
				<table>
					<thead>
						<tr>
							<th data-field="studentnumber">Student Number</th>
							<th data-field="surname">Surname</th>
							<th data-field="firstname">First Name</th>
							<th data-field="middlename">Middle Name</th>
							<th data-field="status">Status</th>
						</tr>
					</thead>

					<tbody>
						<tr ng-repeat="rowContent in rows">
							<td>{{rowContent.studentNumber}}</td>
							<td>{{rowContent.lastName}}</td>
							<td>{{rowContent.firstName}}</td>
							<td>{{rowContent.middleName}}</td>
							<td>{{rowContent.status}}</td>
						</tr>
					</tbody>

				</table>

